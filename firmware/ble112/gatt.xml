<?xml version="1.0" encoding="UTF-8" ?>
<configuration>

    <!-- 1800: org.bluetooth.service.generic_access -->
    <service uuid="1800" id="generic_access">
        <description>Generic Access</description>

        <!-- 2A00: org.bluetooth.characteristic.gap.device_name -->
        <characteristic uuid="2A00" id="c_device_name">
            <description>Device Name</description>
            <properties read="true" const="true" />
            <value>IRKit</value>
        </characteristic>

        <!-- 2A01: org.bluetooth.characteristic.gap.appearance -->
        <characteristic uuid="2A01" id="c_appearance">
            <description>Appearance</description>
            <properties read="true" const="true" />
            <!--
                384: Generic Remote Control, Generic category
                http://developer.bluetooth.org/gatt/characteristics/Pages/CharacteristicViewer.aspx?u=org.bluetooth.characteristic.gap.appearance.xml
            -->
            <value type="hex">0180</value>
        </characteristic>

    </service>

    <!-- 180A: org.bluetooth.service.device_information -->
    <service uuid="180A" id="device_information">
        <description>Device Information</description>

        <!-- 2A29: org.bluetooth.characteristic.manufacturer_name_string -->
        <!-- (support for this characteristic is MANDATORY according to the profile spec) -->
        <characteristic uuid="2A29" id="c_manufacturer_name">
            <description>Manufacturer Name</description>
            <properties read="true" const="true" />
            <value>KAYAC Inc.</value>
        </characteristic>

        <!-- 2A24: org.bluetooth.characteristic.model_number_string -->
        <characteristic uuid="2A24" id="c_model_number">
            <description>Model Number</description>
            <properties read="true" const="true" />
            <value>A</value>
        </characteristic>

        <!-- 2A27: org.bluetooth.characteristic.hardware_revision_string -->
        <characteristic uuid="2A27" id="c_hardware_revision">
            <description>Hardware Revision</description>
            <properties read="true" const="true" />
            <value>1.0</value>
        </characteristic>

        <!-- 2A26: org.bluetooth.characteristic.firmware_revision_string -->
        <!-- BLE112 firmware version (BLE112 SDK version, gatt.xml version) -->
        <characteristic uuid="2A26" id="c_firmware_revision">
            <description>Firmware Revision</description>
            <properties read="true" const="true" />
            <value>1.0</value>
        </characteristic>

        <!-- 2A28: org.bluetooth.characteristic.software_revision_string -->
        <!-- AVR software version -->
        <characteristic uuid="2A28" id="c_software_revision">
            <description>Software Revision</description>
            <properties read="true" const="true" />
            <value variable_length="true" type="user"></value>
        </characteristic>

    </service>

    <service uuid="6C29D110-BE00-419A-BDDC-D4FA6228A20F" id="ir_remote_controller" advertise="true">
        <description>Infrared Remote Controller Service</description>

        <characteristic uuid="06853C75-1617-4D10-822F-40C2018B6B53" id="c_ir_data">
            <description>IR Data.
            Unsigned 16bit signal data array
            </description>
            <!-- can't enable authenticated_read nor authenticated_write because we don't have any display nor keyboard -->
            <properties read="true"
                        const="false"
                        write="true"
                        notify="false"
                        indicate="false"
                        authenticated_read="false"
                        authenticated_write="false"
                        />
            <value variable_length="true" length="1024" type="user"></value>
        </characteristic>

        <characteristic uuid="841B6310-CC62-4976-9C83-EB875AF7E007" id="c_ir_unread_status">
            <description>IR Unread Status</description>
            <properties read="false"
                        const="false"
                        write="false"
                        notify="true"
                        indicate="false"
                        authenticated_read="false"
                        authenticated_write="false"
                        />
            <value variable_length="false" length="1">0</value>
        </characteristic>

        <characteristic uuid="CF746376-2FED-40FA-A232-C0BFF843AA94" id="c_ir_control_point">
            <description>IR Control Point.
            0: Send IR data.
            1-255: Reserved for future use.
            </description>
            <properties read="false"
                        const="false"
                        write="true"
                        notify="false"
                        indicate="false"
                        authenticated_read="false"
                        authenticated_write="false"
                        />
            <value variable_length="false" length="1" type="user">0</value>
        </characteristic>

        <characteristic uuid="21819AB0-C937-4188-B0DB-B9621E1696CD" id="c_ir_carrier_frequency">
            <description>IR Carrier Frequency in kHz</description>
            <properties read="true"
                        const="false"
                        write="true"
                        notify="false"
                        indicate="false"
                        authenticated_read="false"
                        authenticated_write="false"
                        />
            <!-- must be 38 or 40 -->
            <value variable_length="false" length="1" type="user">0</value>
        </characteristic>

        <characteristic uuid="6A936395-E774-4BC0-8B1D-6D14DAA5FC13" id="c_auth_status">
            <description>Authentication Status</description>
            <properties read="true"
                        const="false"
                        write="false"
                        notify="false"
                        indicate="false"
                        authenticated_read="false"
                        authenticated_write="false"
                        />
            <value variable_length="false" length="1" type="user">0</value>
        </characteristic>
    </service>
</configuration>
